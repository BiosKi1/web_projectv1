{% extends  '@EventNight/base.html.twig'%}
{% block title %} Accueil {% endblock %}

{% block body%}
    {% embed "@EventNight/navbarDefault.html.twig" %}
    {% endembed %}
    <div id="mSlide" class="carousel slide carousel-fade" data-ride="carousel" style="width: 100%;">

        <div class="overlay"></div>

        <ol class="carousel-indicators">
            <li data-target="#mSlide" data-slide-to="0" class="active"></li>
            <li data-target="#mSlide" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img class="img-responsive" src="{{ asset('images/presentation.jpg') }}">
                <div class="hero">
                    <hgroup>
                        <h1>Soirée Manga</h1>
                        <h3>Inscription dès maintenant</h3>
                    </hgroup>
                    <button class="btn btn-hero btn-lg" role="button">Inscription</button>
                </div>
            </div>

            <div class="item">
                <img class="img-responsive" src="{{ asset('images/couv1.jpg') }}">
                <div class="carousel-caption">
                    <h3>Page 2 de présentation</h3>
                </div>
            </div>
        </div>

        <a class="left carousel-control left" href="#mSlide" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control right" href="#mSlide" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

    <div class="container-fluid text-center bg-grey">
        <h2 style="color:#E0893C">Présentation</h2>

    </div>

    <div class="container-fluid text-center bg-black">
        <h2 style="color:#E0893C">Nous contacter</h2>
        <hr/>
        <br>
        <div class="row">
            <div class="col-md-3 ">
                <h2 style="font-size: 25px;"><i class="fa fa-map-marker" aria-hidden="true"></i>&#160; Adresse: </h2>
                <p style="font-size: 15px;">00 rue paris </br>
                    75 000 Paris</p>
            </div>
            <div class="col-md-3">
                <h2 style="font-size: 25px;"><i class="fa fa-mobile" aria-hidden="true"></i>&#160; Téléphone: </h2>
                <p style="font-size: 15px;">+33 (0) 0 00 00 00 00</p>
            </div>
            <div class="col-md-3">
                <h2 style="font-size: 25px;"><i class="fa fa-envelope-o" aria-hidden="true"></i>&#160; Mail: </h2>
                <p style="font-size: 15px;">julien.xu@edu.ecetech.fr </p>
            </div>
            <div class="col-md-3">
                <h2 style="font-size: 25px;"> Réseaux Sociaux: </h2>
                <a class="facebookBtn smGlobalBtn" href="https://fr-fr.facebook.com/" target="_blank">
                    <span class="fa fa-facebook"></span>
                </a>
                <a class="twitterBtn smGlobalBtn" href="https://twitter.com/?lang=fr" target="_blank">
                    <span class="fa fa-twitter"></span>
                </a>
                <a class="instagramBtn smGlobalBtn" href="https://www.instagram.com/" target="_blank">
                    <span class="fa fa-instagram"></span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
